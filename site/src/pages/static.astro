---
import Layout from '../layouts/Layout.astro';
import AnimatedName from '../components/AnimatedName';
import StaticImageCard from '../components/StaticImageCard';
import StaticGallery from '../components/StaticGallery';
import { staticWorks, categories } from '../data/static';

const featuredWork = staticWorks.filter(work => work.featured);
const allWork = staticWorks.sort((a, b) => parseInt(b.year) - parseInt(a.year));
---

<Layout title="static work">
  <section class="mb-32">
    <div class="mb-16">
      <AnimatedName text="Static" size="7xl" client:load />
    </div>
    
    <div class="prose prose-lg text-secondary max-w-none mb-16">
      <p class="font-['PolySans-Neutral'] text-lg">
        exploring visual communication through branding, logos, and graphic designâ€”where ideas become tangible.
      </p>
    </div>

    <!-- Interactive Gallery Component -->
    <StaticGallery works={allWork} categories={categories} client:load />
  </section>
</Layout>



<style>
  /* Fade in animation for gallery items */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    animation-fill-mode: both;
  }

  /* Static gallery styles */
  .static-gallery {
    position: relative;
  }

  /* Smooth transitions for all interactions */
  * {
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style> 