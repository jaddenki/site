---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
// Format the date nicely
const formattedDate = frontmatter.date ? frontmatter.date : '';
---

<Layout title={`${frontmatter.title}`}>
  <div class="max-w-lg mx-auto px-4 sm:px-6">
    <div class="mb-6 sm:mb-8">
      <a 
        href="/notebook" 
        class="text-secondary hover:text-accent transition-colors inline-flex items-center gap-2 font-['PolySans-Neutral']"
      >
        <span>&lt;</span>
        <span>back to notebook</span>
      </a>
    </div>

    <article class="mb-20 sm:mb-32">
    <header class="mb-10 sm:mb-16">
      <div class="text-sm text-accent mb-3 sm:mb-4 font-['PolySans-Neutral']">
        {formattedDate}
      </div>
      <h1 class="mb-6 sm:mb-8 font-['PolySans-Neutral'] text-4xl sm:text-6xl">
        {frontmatter.title}
      </h1>
      <p class="text-secondary text-base sm:text-lg font-['PolySans-Neutral']">
        {frontmatter.description}
      </p>
    </header>

    <div class="prose prose-lg sm:prose-xl text-secondary max-w-none mb-12 sm:mb-16">
      <slot />
    </div>

    <footer class="border-t border-muted pt-6 sm:pt-8">
      <a 
        href="#top" 
        class="text-secondary hover:text-accent transition-colors inline-flex items-center gap-2 font-['PolySans-Neutral']"
      >
        <span>^</span>
        <span>back to top</span>
      </a>
    </footer>
    </article>
  </div>
</Layout>

<style is:global>
  /* Style adjustments for markdown content */
  .prose {
    font-family: 'PolySans-Neutral', sans-serif;
    font-size: 1.125rem;
    line-height: 1.75;
  }

  .prose strong {
    color: var(--accent);
  }


  .prose h2 {
    font-family: 'PolySans-Neutral';
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    color: var(--foreground);
  }

  .prose h3 {
    font-family: 'PolySans-Neutral';
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--accent);
  }

  .prose a {
    color: var(--accent);
    text-decoration: none;
    transition: all 0.2s ease;
    font-family: 'PolySans-Neutral', sans-serif;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose ul {
    list-style-type: none;
    padding-left: 1rem;
  }

  .prose li {
    position: relative;
    margin-bottom: 0.75rem;
    font-family: 'PolySans-Neutral', sans-serif;
  }

  .prose li::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 0.75rem;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: var(--muted);
  }

  .prose li:hover::before {
    background-color: var(--accent);
  }

  .prose hr {
    border: none;
    border-top: 1px solid var(--muted);
    margin: 2rem 0;
  }

  .prose em {
    color: var(--secondary);
    font-style: italic;
    font-family: 'PolySans-Neutral';
  }

  .prose strong {
    color: var(--foreground);
    font-weight: 500;
    font-family: 'PolySans-Neutral';
  }

  .prose img {
    display: block;
    margin: 2.5rem auto;
    max-width: 100%;
    height: auto;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease;
  }

  .prose img:hover {
    transform: scale(1.01);
  }

  .prose figure {
    margin: 2.5rem auto;
    text-align: center;
  }

  .prose figcaption {
    margin-top: 0.75rem;
    color: var(--secondary);
    font-size: 0.875rem;
    font-family: 'PolySans-Neutral';
    font-style: italic;
  }
  
  /* Add highlighting with accent color */
  ::selection {
    background-color: var(--accent);
    color: var(--background);
  }
  
  /* Mobile optimization */
  @media (max-width: 640px) {
    .prose {
      font-size: 1rem;
    }
    
    .prose img {
      margin: 1.5rem auto;
    }
    
    .prose h2 {
      font-size: 1.4rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }
    
    .prose h3 {
      font-size: 1.2rem;
      margin-top: 1.5rem;
    }
    
    .prose li::before {
      top: 0.6rem;
    }
    
    .prose pre {
      padding: 0.75rem;
      font-size: 0.875rem;
      overflow-x: auto;
    }
  }
</style> 