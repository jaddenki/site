---
import '../styles/theme.css';
import ThemeSwitcher from '../components/ThemeSwitcher';

interface Props {
  title: string;
}

const { title } = Astro.props;

const navItems = [
  { name: 'home', path: '/' },
  { name: 'notebook', path: '/notebook' },
  { name: 'motion', path: '/motion' },
  { name: 'matcha', path: '/matcha' },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Prevent theme flash -->
    <script is:inline>
      const theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="max-w-2xl mx-auto px-4 sm:px-6">
      <header class="py-8 sm:py-12">
        <nav class="w-full">
          <div class="flex items-center justify-between w-full flex-wrap">
            <div class="flex items-center space-x-1 sm:space-x-2 flex-wrap">
              {navItems.map((item, index) => (
                <>
                  <a
                    href={item.path}
                    class="text-secondary hover:text-accent transition-all py-2 px-2 sm:px-3 text-sm"
                  >
                    {item.name}
                  </a>
                  {index < navItems.length - 1 && (
                    <span class="text-muted">/</span>
                  )}
                </>
              ))}
            </div>
            <ThemeSwitcher client:only="react" />
          </div>
        </nav>
      </header>
      
      <main class="mt-6 sm:mt-8">
        <slot />
      </main>

      <footer class="mt-24 sm:mt-32 border-t border-muted">
        <div class="py-8 sm:py-12 flex justify-center items-center text-left whitespace-nowrap">
          <p class="text-secondary text-xs sm:text-sm font-['Redaction-10'] inline-flex items-center">typeface is<span class="mx-1"></span><a href="https://www.redaction.us/" target="_blank" rel="noopener" class="text-accent hover:underline">  redaction</a>. made with<span class="text-accent mx-1">&lt;3</span>and<span class="mx-1"><a href="https://astro.build" target="_blank" rel="noopener" class="text-accent hover:underline">astro</a></span>by<span class="ml-1"><a href="https://github.com/jaddenki/site" class="text-accent hover:underline" target="_blank">jadden</a></span>
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    -webkit-text-size-adjust: 100%;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: 'Inter', sans-serif;
    background-color: var(--background);
    overflow-x: hidden;
  }

  main {
    flex: 1;
    position: relative;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .fade-in {
    animation: fade-in 0.5s ease-out;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
  
  ::selection {
    background-color: var(--accent);
    color: var(--background);
  }

  a, button {
    padding: 0.25rem;
    margin: -0.25rem;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2rem !important;
    }
    
    h2 {
      font-size: 1.5rem !important;
    }
    
    h3 {
      font-size: 1.25rem !important;
    }
    
    .prose {
      font-size: 1rem !important;
    }
  }
</style>